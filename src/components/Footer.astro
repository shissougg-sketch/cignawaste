---
import { PHONE, PHONE_LINK, TEXT_LINK, NAV_LINKS } from '../constants/contact';

const phone = PHONE;
const phoneLink = PHONE_LINK;
const textLink = TEXT_LINK;
const currentYear = new Date().getFullYear();
const navLinks = NAV_LINKS;

const nassauTowns = ["Hempstead", "Oyster Bay", "Glen Cove", "Long Beach"];
const suffolkTowns = ["Babylon", "Islip", "Huntington", "Brookhaven"];
---

<footer class="bg-cigna-charcoal text-white">
  <div class="container-custom py-8 md:py-12">
    <!-- Mobile: Logo & Contact at top, then 2-col grid -->
    <!-- Desktop: 4-col grid -->

    <!-- Logo & Contact - Full width on mobile (simplified - sticky bar handles CTAs) -->
    <div class="mb-6 pb-6 border-b border-gray-700 lg:hidden text-center">
      <img
        src="/images/logo/CignaLogo.png"
        alt="Cigna Recycling & Waste"
        class="h-12 w-auto mb-3 mx-auto"
      />
      <p class="text-gray-300 text-sm">
        Your trusted partner for dumpster rentals and waste management across Long Island.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      <!-- Logo & Contact - Desktop only -->
      <div class="hidden lg:block space-y-4">
        <img
          src="/images/logo/CignaLogo.png"
          alt="Cigna Recycling & Waste"
          class="h-16 w-auto"
        />
        <p class="text-gray-300">
          Your trusted partner for dumpster rentals and waste management across Long Island.
        </p>
        <div class="space-y-2">
          <span class="flex items-center gap-2 text-cigna-yellow font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            {phone}
          </span>
          <a href="/contact#quote-form" class="flex items-center gap-2 text-gray-300 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
            </svg>
            Get a Quote
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-base md:text-lg font-bold mb-3 md:mb-4 text-cigna-yellow">Quick Links</h3>
        <nav class="space-y-1.5 md:space-y-2">
          {navLinks.map((link) => (
            <a
              href={link.href}
              class="block text-gray-300 hover:text-white transition-colors text-sm md:text-base"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-base md:text-lg font-bold mb-3 md:mb-4 text-cigna-yellow">Our Services</h3>
        <ul class="space-y-1.5 md:space-y-2 text-gray-300 text-sm md:text-base">
          <li>Dumpster Rentals</li>
          <li>Residential</li>
          <li>Commercial</li>
          <li>Demolition</li>
          <li>Loading Service</li>
        </ul>
      </div>

      <!-- Service Areas -->
      <div class="col-span-2 lg:col-span-1">
        <h3 class="text-base md:text-lg font-bold mb-3 md:mb-4 text-cigna-yellow">Service Areas</h3>
        <div class="grid grid-cols-2 lg:grid-cols-1 gap-3">
          <div>
            <p class="font-semibold text-gray-300 text-sm md:text-base">Nassau County</p>
            <p class="text-gray-300 text-xs md:text-sm">{nassauTowns.slice(0, 3).join(", ")}, +more</p>
          </div>
          <div>
            <p class="font-semibold text-gray-300 text-sm md:text-base">Suffolk County</p>
            <p class="text-gray-300 text-xs md:text-sm">{suffolkTowns.slice(0, 3).join(", ")}, +more</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400 text-sm">
      <p>&copy; {currentYear} Cigna Recycling & Waste. All rights reserved.</p>
      <p class="mt-2">Serving Nassau & Suffolk County, Long Island</p>
    </div>
  </div>
</footer>
