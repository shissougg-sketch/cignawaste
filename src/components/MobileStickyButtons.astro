---
import { PHONE_LINK, TEXT_LINK } from '../constants/contact';

const phoneLink = PHONE_LINK;
const textLink = TEXT_LINK;
---

<!-- Mobile Sticky CTA Buttons - Only visible on mobile -->
<div class="fixed bottom-0 left-0 right-0 md:hidden z-50 safe-area-inset-bottom">
  <div class="grid grid-cols-2 shadow-2xl">
    <!-- Call Button -->
    <a
      href={phoneLink}
      class="flex items-center justify-center gap-2 bg-cigna-red text-white font-bold py-4 text-base sm:text-lg min-h-[56px]"
      aria-label="Call us now"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
      </svg>
      Call Now
    </a>

    <!-- Text Button -->
    <a
      href={textLink}
      class="flex items-center justify-center gap-2 bg-cigna-yellow text-cigna-charcoal font-bold py-4 text-base sm:text-lg min-h-[56px]"
      aria-label="Text us for a quote"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
      </svg>
      Text Quote
    </a>
  </div>
</div>

<style>
  /* Add padding to footer to account for sticky buttons on mobile */
  @media (max-width: 767px) {
    :global(footer) {
      padding-bottom: 72px;
    }
  }

  .safe-area-inset-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }
</style>
