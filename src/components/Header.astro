---
import { PHONE, PHONE_LINK, NAV_LINKS } from '../constants/contact';

const phone = PHONE;
const phoneLink = PHONE_LINK;
const navLinks = NAV_LINKS;
---

<header class="bg-cigna-charcoal sticky top-0 z-50 shadow-lg">
  <div class="container-custom">
    <div class="flex items-center justify-between py-4">
      <!-- Spacer for mobile centering (matches menu button width) -->
      <div class="lg:hidden w-[44px]"></div>

      <!-- Logo -->
      <a href="/" class="flex-shrink-0 lg:flex-shrink lg:mr-auto">
        <img
          src="/images/logo/CignaLogo.png"
          alt="Cigna Recycling & Waste"
          class="h-16 md:h-20 w-auto scale-x-105"
        />
      </a>

      <!-- Desktop Navigation (centered) -->
      <nav class="hidden lg:flex items-center justify-center flex-1 gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-white hover:text-cigna-yellow transition-colors font-medium"
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Spacer to balance the layout on desktop -->
      <div class="hidden lg:block w-[44px]"></div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden text-white p-3 -mr-2 min-h-[44px] min-w-[44px] flex items-center justify-center"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="lg:hidden hidden bg-cigna-charcoal border-t border-gray-700">
    <nav class="container-custom py-4 flex flex-col gap-2">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-white hover:text-cigna-yellow transition-colors font-medium text-lg py-3 min-h-[44px] flex items-center"
        >
          {link.label}
        </a>
      ))}
      <a
        href={phoneLink}
        class="flex items-center gap-2 text-cigna-yellow font-bold text-lg py-3 min-h-[44px]"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
        </svg>
        {phone}
      </a>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isHidden = mobileMenu.classList.toggle('hidden');
      menuButton.setAttribute('aria-expanded', String(!isHidden));
    });
  }
</script>
