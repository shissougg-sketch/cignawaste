---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileStickyButtons from '../components/MobileStickyButtons.astro';
import QuoteForm from '../components/QuoteForm.astro';
import { PHONE, PHONE_LINK, TEXT_LINK } from '../constants/contact';
import '../styles/global.css';

const phone = PHONE;
const phoneLink = PHONE_LINK;
const textLink = TEXT_LINK;

const dumpsterSizes = [
  {
    size: "10 Yard",
    image: "/images/dumpsters/dumpster-10.png",
    dimensions: "12' L x 7.5' W x 3.5' H",
    holds: "Holds 3-4 pickup truck loads",
    idealFor: [
      "Small cleanouts",
      "Garage clearing",
      "Small bathroom remodel",
      "Deck removal (small)",
      "Yard debris",
    ],
  },
  {
    size: "15 Yard",
    image: "/images/dumpsters/dumpster-15.png",
    dimensions: "14' L x 7.5' W x 4.5' H",
    holds: "Holds 4-5 pickup truck loads",
    idealFor: [
      "Kitchen or bathroom remodel",
      "Basement cleanout",
      "Small roof tear-off",
      "Flooring removal",
      "Medium-sized renovations",
    ],
  },
  {
    size: "20 Yard",
    image: "/images/dumpsters/dumpster-20.png",
    dimensions: "16' L x 7.5' W x 4.5' H",
    holds: "Holds 5-7 pickup truck loads",
    idealFor: [
      "Roof tear-offs",
      "Large home cleanouts",
      "Construction debris",
      "Major renovations",
      "Deck/patio removal",
    ],
  },
  {
    size: "30 Yard",
    image: "/images/dumpsters/dumpster-30.png",
    dimensions: "22' L x 8' W x 8' H",
    holds: "Holds 7-10 pickup truck loads",
    idealFor: [
      "Major construction projects",
      "Commercial jobs",
      "Large demolition",
      "Estate cleanouts",
      "New construction debris",
    ],
  },
];

const steps = [
  { number: "1", title: "Contact Us", description: "Call or text for a free quote. Tell us about your project and we'll recommend the right size." },
  { number: "2", title: "We Deliver", description: "We drop off the dumpster at your location. Place it on your driveway, yard, or job site." },
  { number: "3", title: "Load It Up", description: "Take your time filling it. Need help? Add our loading service." },
  { number: "4", title: "We Pick Up", description: "When you're done, give us a call. We'll pick up and handle proper disposal." },
];

const acceptedMaterials = [
  "Household junk & furniture",
  "Construction debris",
  "Roofing materials",
  "Yard waste",
  "Appliances (most types)",
  "Wood & lumber",
  "Drywall & plaster",
  "Flooring materials",
  "Concrete & masonry (limited)",
  "Metal & scrap",
];

const notAccepted = [
  "Hazardous materials",
  "Chemicals & paint",
  "Tires",
  "Batteries",
  "Refrigerants (Freon)",
  "Medical waste",
  "Asbestos",
];
---

<BaseLayout
  title="Dumpster Rentals Long Island | 10, 15, 20, 30 Yard | Cigna Recycling & Waste"
  description="Rent dumpsters in Nassau & Suffolk County. 10, 15, 20, and 30 yard sizes available. Residential and commercial. Call 631-855-5502 for a free quote."
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="bg-cigna-charcoal text-white py-16">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
        Dumpster <span class="text-cigna-yellow">Rentals</span> for Every Job
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl">
        From small cleanouts to major construction, we have the right dumpster size. Serving all of Nassau and Suffolk County.
      </p>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-16 bg-gray-100">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading text-cigna-charcoal text-center mb-12">
        How It <span class="text-cigna-red">Works</span>
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {steps.map((step) => (
          <div class="bg-white rounded-xl p-6 shadow-md relative">
            <div class="w-12 h-12 bg-cigna-red text-white rounded-full flex items-center justify-center text-xl font-bold mb-4">
              {step.number}
            </div>
            <h3 class="text-xl font-bold text-cigna-charcoal mb-2">{step.title}</h3>
            <p class="text-gray-600">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Dumpster Sizes -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading text-cigna-charcoal text-center mb-4">
        Choose Your <span class="text-cigna-red">Size</span>
      </h2>
      <p class="text-lg text-gray-600 text-center mb-2 max-w-2xl mx-auto">
        Not sure which size you need? Call us and we'll help you figure it out.
      </p>
      <p class="text-sm text-gray-400 text-center mb-12">
        *Dimensions may vary based on availability.
      </p>

      <div class="space-y-8">
        {dumpsterSizes.map((dumpster, index) => (
          <div class={`rounded-xl overflow-hidden shadow-lg ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} flex flex-col lg:flex`}>
            <!-- Dumpster Image -->
            <div class="lg:w-1/3 bg-[#EFEDE8] aspect-video lg:aspect-auto flex items-center justify-center p-6">
              <img
                src={dumpster.image}
                alt={`${dumpster.size} dumpster`}
                class="max-h-48 lg:max-h-64 w-auto object-contain"
              />
            </div>

            <!-- Content -->
            <div class="lg:w-2/3 p-6 md:p-8 bg-white">
              <div class="flex items-center gap-4 mb-4">
                <h3 class="text-3xl font-heading font-bold text-cigna-charcoal">{dumpster.size}</h3>
                <span class="bg-cigna-yellow text-cigna-charcoal text-sm font-bold px-3 py-1 rounded-full">
                  {dumpster.holds}
                </span>
              </div>

              <p class="text-gray-500 mb-4">Dimensions: {dumpster.dimensions}</p>

              <div class="mb-6">
                <h4 class="font-bold text-cigna-charcoal mb-2">Ideal For:</h4>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                  {dumpster.idealFor.map((use) => (
                    <li class="flex items-center gap-2 text-gray-600">
                      <svg class="w-5 h-5 text-cigna-red flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      {use}
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Desktop: Link to contact form -->
              <a href="/contact#quote-form" class="hidden md:inline-flex btn-secondary">
                Get a Quote for {dumpster.size}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What We Accept -->
  <section class="py-16 bg-gray-100">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading text-cigna-charcoal text-center mb-4">
        What We <span class="text-cigna-red">Accept</span>
      </h2>
      <p class="text-center text-gray-600 mb-12">
        Have more questions? Check out our <a href="/faq" class="text-cigna-red font-bold hover:underline">FAQ page</a>.
      </p>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Accepted -->
        <div class="bg-white rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-bold text-green-600 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Generally Accepted
          </h3>
          <ul class="space-y-2">
            {acceptedMaterials.map((item) => (
              <li class="flex items-center gap-2 text-gray-600">
                <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                {item}
              </li>
            ))}
          </ul>
        </div>

        <!-- Not Accepted -->
        <div class="bg-white rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-bold text-red-600 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            Not Accepted
          </h3>
          <ul class="space-y-2">
            {notAccepted.map((item) => (
              <li class="flex items-center gap-2 text-gray-600">
                <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                {item}
              </li>
            ))}
          </ul>
          <p class="mt-4 text-sm text-gray-500">
            Not sure if something is accepted? Just ask — we're happy to help.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Residential vs Commercial -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading text-cigna-charcoal text-center mb-12">
        Residential & <span class="text-cigna-red">Commercial</span>
      </h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Residential -->
        <div class="border-2 border-gray-200 rounded-xl p-6 hover:border-cigna-yellow transition-colors">
          <h3 class="text-2xl font-bold text-cigna-charcoal mb-4">Residential</h3>
          <p class="text-gray-600 mb-4">
            Perfect for homeowners tackling cleanouts, renovations, or landscaping projects. We'll work with your HOA and placement needs.
          </p>
          <ul class="space-y-2 text-gray-600">
            <li>• Home cleanouts & decluttering</li>
            <li>• Renovation debris</li>
            <li>• Garage & basement clearing</li>
            <li>• Moving preparation</li>
            <li>• Estate cleanouts</li>
          </ul>
        </div>

        <!-- Commercial -->
        <div class="border-2 border-gray-200 rounded-xl p-6 hover:border-cigna-yellow transition-colors">
          <h3 class="text-2xl font-bold text-cigna-charcoal mb-4">Commercial</h3>
          <p class="text-gray-600 mb-4">
            Reliable service for contractors, property managers, and businesses. Flexible scheduling to match your project timeline.
          </p>
          <ul class="space-y-2 text-gray-600">
            <li>• Construction job sites</li>
            <li>• Roofing contractors</li>
            <li>• Property cleanouts</li>
            <li>• Retail & office renovations</li>
            <li>• Multi-unit projects</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-cigna-red text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-heading mb-4">
        Get Your <span class="text-cigna-yellow">Quote</span> Today
      </h2>
      <p class="text-xl text-red-100 mb-8 max-w-2xl mx-auto">
        Not sure what size you need? No problem. Call or text us and we'll figure it out together.
      </p>
      <!-- Desktop: Single quote button + phone display -->
      <div class="hidden md:flex flex-row gap-4 justify-center items-center">
        <a href="/contact#quote-form" class="btn-primary text-lg">
          Request Quote Online
        </a>
        <span class="text-red-100">or call <span class="text-cigna-yellow font-bold">{phone}</span></span>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <MobileStickyButtons slot="mobile-cta" />
</BaseLayout>
