---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileStickyButtons from '../components/MobileStickyButtons.astro';
import { PHONE, PHONE_LINK } from '../constants/contact';
import '../styles/global.css';

const phone = PHONE;
const phoneLink = PHONE_LINK;
---

<BaseLayout
  title="Page Not Found | Cigna Recycling & Waste"
  description="The page you're looking for doesn't exist. Contact Cigna Recycling & Waste for dumpster rentals in Nassau & Suffolk County."
>
  <Header slot="header" />

  <section class="py-20 md:py-32 bg-white">
    <div class="container-custom text-center">
      <div class="max-w-2xl mx-auto">
        <!-- 404 Icon -->
        <div class="w-24 h-24 mx-auto mb-8 bg-cigna-red/10 rounded-full flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-cigna-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <h1 class="text-5xl md:text-6xl font-heading font-bold text-cigna-charcoal mb-4">
          404
        </h1>
        <p class="text-2xl md:text-3xl font-heading text-cigna-charcoal mb-4">
          Page Not Found
        </p>
        <p class="text-lg text-gray-600 mb-8">
          Sorry, the page you're looking for doesn't exist or has been moved.
        </p>

        <!-- Quick Links -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a href="/" class="btn-primary">
            Go to Homepage
          </a>
          <a href="/contact" class="btn-outline border-cigna-charcoal text-cigna-charcoal hover:bg-cigna-charcoal hover:text-white">
            Contact Us
          </a>
        </div>

        <!-- Phone CTA -->
        <div class="bg-gray-100 rounded-xl p-6 md:p-8">
          <p class="text-gray-600 mb-4">
            Need a dumpster? We're here to help.
          </p>
          <a href={phoneLink} class="btn-secondary text-xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            Call {phone}
          </a>
        </div>

        <!-- Helpful Links -->
        <div class="mt-12">
          <p class="text-sm text-gray-500 mb-4">Looking for something specific?</p>
          <div class="flex flex-wrap gap-4 justify-center text-sm">
            <a href="/dumpster-rentals" class="text-cigna-red hover:underline">Dumpster Rentals</a>
            <span class="text-gray-300">|</span>
            <a href="/services" class="text-cigna-red hover:underline">Services</a>
            <span class="text-gray-300">|</span>
            <a href="/gallery" class="text-cigna-red hover:underline">Gallery</a>
            <span class="text-gray-300">|</span>
            <a href="/faq" class="text-cigna-red hover:underline">FAQ</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <MobileStickyButtons slot="mobile-cta" />
</BaseLayout>
