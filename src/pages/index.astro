---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileStickyButtons from '../components/MobileStickyButtons.astro';
import QuoteForm from '../components/QuoteForm.astro';
import { PHONE, PHONE_LINK, TEXT_LINK } from '../constants/contact';
import '../styles/global.css';

const phone = PHONE;
const phoneLink = PHONE_LINK;
const textLink = TEXT_LINK;

const dumpsterSizes = [
  { size: "10 Yard", description: "Small cleanouts, garage clearing", icon: "S" },
  { size: "15 Yard", description: "Kitchen/bathroom remodels", icon: "M" },
  { size: "20 Yard", description: "Roof tear-offs, renovations", icon: "L" },
  { size: "30 Yard", description: "Major construction, demo", icon: "XL" },
];

const whyChoose = [
  { title: "Local Ownership", description: "Family-owned and operated on Long Island", icon: "üè†" },
  { title: "Licensed & Insured", description: "Fully licensed and insured for your protection", icon: "‚úì" },
  { title: "Fast Response", description: "Quick delivery, often same or next day", icon: "‚ö°" },
  { title: "Flexible Scheduling", description: "Work around your timeline", icon: "üìÖ" },
];
---

<BaseLayout
  title="Dumpster Rental Nassau & Suffolk County | Cigna Recycling & Waste"
  description="Dumpster rentals for Nassau and Suffolk County, Long Island. 10, 15, 20, 30 yard dumpsters. Demolition and loading services. Call 631-855-5502 for a free quote."
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative bg-cigna-charcoal text-white overflow-hidden">
    <!-- Background image -->
    <div class="absolute inset-0">
      <img
        src="/images/hero/hero.jpg"
        alt="Cigna dumpster rental service"
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-cigna-charcoal/70"></div>
    </div>

    <div class="container-custom relative py-12 sm:py-16 md:py-24">
      <div class="max-w-3xl">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-4">
          <span class="text-cigna-yellow">Dumpster Rentals</span><br />
          for Nassau & Suffolk County
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-6 sm:mb-8">
          Fast delivery. Flexible pickup. Local service you can count on.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
          <a href={phoneLink} class="btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            Call {phone}
          </a>
          <a href={textLink} class="btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
            </svg>
            Text for Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Dumpster Sizes Section -->
  <section class="py-12 sm:py-16 bg-white">
    <div class="container-custom">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading text-cigna-charcoal mb-3 sm:mb-4">
          Dumpster <span class="text-cigna-red">Rentals</span>
        </h2>
        <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto">
          From small cleanouts to major construction projects, we have the right size for your job.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6">
        {dumpsterSizes.map((item) => (
          <div class="bg-gray-50 rounded-xl p-4 sm:p-6 text-center border-2 border-transparent hover:border-cigna-yellow transition-colors">
            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-cigna-red text-white rounded-full flex items-center justify-center text-xl sm:text-2xl font-bold mx-auto mb-3 sm:mb-4">
              {item.icon}
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-cigna-charcoal mb-1 sm:mb-2">{item.size}</h3>
            <p class="text-gray-600 text-xs sm:text-sm">{item.description}</p>
          </div>
        ))}
      </div>

      <div class="text-center mt-8">
        <a href="/dumpster-rentals" class="btn-outline border-cigna-red text-cigna-red hover:bg-cigna-red hover:text-white">
          View All Sizes & Details
        </a>
      </div>
    </div>
  </section>

  <!-- Additional Services Section -->
  <section class="py-12 sm:py-16 bg-gray-100">
    <div class="container-custom">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading text-cigna-charcoal mb-3 sm:mb-4">
          Additional <span class="text-cigna-red">Services</span>
        </h2>
        <p class="text-base sm:text-lg text-gray-600">
          Need more than just a dumpster? We've got you covered.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 sm:gap-8 max-w-4xl mx-auto">
        <!-- Demolition -->
        <div class="bg-white rounded-xl p-6 sm:p-8 shadow-lg">
          <div class="w-12 h-12 sm:w-14 sm:h-14 bg-cigna-yellow rounded-lg flex items-center justify-center mb-3 sm:mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-cigna-charcoal" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-cigna-charcoal mb-2 sm:mb-3">Demolition</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-3 sm:mb-4">
            Residential and light commercial demolition. Interior tear-outs, shed removal, deck demolition, and more. Safe, efficient, and properly disposed.
          </p>
          <a href="/services#demolition" class="text-cigna-red font-bold hover:underline min-h-[44px] inline-flex items-center">
            Learn More ‚Üí
          </a>
        </div>

        <!-- Loading Service -->
        <div class="bg-white rounded-xl p-6 sm:p-8 shadow-lg">
          <div class="w-12 h-12 sm:w-14 sm:h-14 bg-cigna-yellow rounded-lg flex items-center justify-center mb-3 sm:mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 text-cigna-charcoal" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-cigna-charcoal mb-2 sm:mb-3">Loading Service</h3>
          <p class="text-sm sm:text-base text-gray-600 mb-3 sm:mb-4">
            Let us do the heavy lifting. Perfect for cleanouts, estate jobs, or when you're short on time. We'll load the dumpster for you.
          </p>
          <a href="/services#loading" class="text-cigna-red font-bold hover:underline min-h-[44px] inline-flex items-center">
            Learn More ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Cigna -->
  <section class="py-12 sm:py-16 bg-cigna-red text-white">
    <div class="container-custom">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading mb-3 sm:mb-4">
          Why Choose <span class="text-cigna-yellow">Cigna</span>?
        </h2>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8">
        {whyChoose.map((item) => (
          <div class="text-center">
            <div class="text-3xl sm:text-4xl mb-2 sm:mb-3">{item.icon}</div>
            <h3 class="text-base sm:text-lg font-bold mb-1 sm:mb-2">{item.title}</h3>
            <p class="text-red-100 text-xs sm:text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Preview -->
  <section class="py-12 sm:py-16 bg-white">
    <div class="container-custom">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading text-cigna-charcoal mb-3 sm:mb-4">
          Our <span class="text-cigna-red">Work</span>
        </h2>
        <p class="text-base sm:text-lg text-gray-600">
          Real dumpsters. Real jobs. Real Long Island.
        </p>
      </div>

      <!-- Gallery grid -->
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3 sm:gap-4">
        {[1, 2, 3, 4, 5, 6].map((i) => (
          <div class="aspect-square rounded-lg overflow-hidden">
            <img
              src={`/images/gallery/gallery-${i}.jpg`}
              alt={`Cigna job site ${i}`}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              loading="lazy"
              width="400"
              height="400"
            />
          </div>
        ))}
      </div>

      <div class="text-center mt-6 sm:mt-8">
        <a href="/gallery" class="btn-outline border-cigna-charcoal text-cigna-charcoal hover:bg-cigna-charcoal hover:text-white">
          View Full Gallery
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-12 sm:py-16 bg-cigna-charcoal text-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <div>
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading mb-3 sm:mb-4">
            Ready to Get <span class="text-cigna-yellow">Started</span>?
          </h2>
          <p class="text-lg sm:text-xl text-gray-300 mb-4 sm:mb-6">
            Get a free quote for your project. No automated pricing ‚Äî just a real conversation about what you need.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mb-6 sm:mb-8">
            <a href={phoneLink} class="btn-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
              Call {phone}
            </a>
            <a href={textLink} class="btn-primary">
              Text for Quote
            </a>
          </div>
          <p class="text-sm sm:text-base text-gray-400">
            <strong class="text-cigna-yellow">Serving:</strong> Nassau County ‚Ä¢ Suffolk County ‚Ä¢ All of Long Island
          </p>
        </div>

        <div class="bg-white/10 rounded-xl p-5 sm:p-6 md:p-8">
          <h3 class="text-2xl font-bold mb-6">Request a Quote</h3>
          <!-- Success Message (shown after form submission) -->
          <div id="homepage-success" class="hidden text-center py-8">
            <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-white mb-2">Quote Request Sent!</h4>
            <p class="text-gray-300 mb-4">Thank you for reaching out. We'll get back to you shortly.</p>
            <p class="text-sm text-gray-400">You can also call us at <a href="tel:+16318555502" class="text-cigna-yellow font-bold">631-855-5502</a> for immediate assistance.</p>
          </div>
          <!-- Form (hidden after submission) -->
          <div id="homepage-form-container">
            <QuoteForm variant="dark" compact redirectUrl="https://cignadumpsters.com/?submitted=true" />
          </div>
        </div>

        <script>
          if (window.location.search.includes('submitted=true')) {
            const successEl = document.getElementById('homepage-success');
            const formContainer = document.getElementById('homepage-form-container');
            if (successEl && formContainer) {
              successEl.classList.remove('hidden');
              formContainer.classList.add('hidden');
            }
          }
        </script>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <MobileStickyButtons slot="mobile-cta" />
</BaseLayout>
